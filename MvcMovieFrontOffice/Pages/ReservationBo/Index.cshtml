@page
@model MvcMovieFrontOffice.Pages.ReservationBo.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="table-responsive table-responsive-data2">
    <table class="table table-data2">
        <thead>
        <tr>
            <th>Id</th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationView[0].Email)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.ReservationView!.Count > 0)
        {
            @foreach (var reservation in Model.ReservationView)
            {
                <tr class="tr-shadow">
                    <td>
                        @reservation.ReservationId
                    </td>
                    <td class="desc">@reservation.StartDate</td>
                    <td>@reservation.EndDate</td>
                    <td>@reservation.Status</td>
                    <td>@reservation.TotalPrice</td>
                    <td>@reservation.Model</td>
                    <td>@reservation.make</td>
                    <td>
                        <span class="@(@reservation.availability ? "status--process" : "status--denied")">
                            @reservation.availability
                        </span>
                    </td>
                    <td>@reservation.FullName</td>
                    <td>@reservation.Email</td>
                    <td>
                        <div class="table-data-feature">
                            @if (reservation.availability)
                            {
                                <a class="item" data-toggle="tooltip" data-placement="top" title="Delete"
                                    href="/ReservationBo/Delete?id=@reservation.ReservationId">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                            }
                            <a class="item" data-toggle="tooltip" data-placement="top" title="Edit"
                               href="/ReservationBo/Edit?id=@reservation.ReservationId">
                                <i class="zmdi zmdi-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                <tr class="spacer"></tr>
            }
        }
        else
        {
            <p>No data vehicle</p>
        }
        </tbody>
    </table>
</div>