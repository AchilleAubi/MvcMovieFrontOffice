@page
@model MvcMovieFrontOffice.Pages.Rapports.Index

@{
    ViewData["Title"] = "Reports";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Revenue Generated</h5>
                    <p class="card-text display-4 fw-bold text-success">@Model.RevenusTotaux.ToString("C")</p>
                </div>
            </div>
        </div>

        <div class="col-md-12 mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Vehicle Occupancy Rates</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover table-responsive">
                        <thead class="table-light">
                        <tr>
                            <th>Vehicle</th>
                            <th>Model</th>
                            <th class="text-center">Occupancy Rate</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.VehicleOccupancies.Any())
                        {
                            @foreach (var vehicle in Model.VehicleOccupancies)
                            {
                                <tr>
                                    <td>@vehicle.Make</td>
                                    <td>@vehicle.Model</td>
                                    <td class="text-center text-primary fw-bold">
                                        @vehicle.OccupancyRate.ToString("F2") %
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    No occupancy data available.
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
