@page
@model MvcMovieFrontOffice.Pages.Rapports.Index

@{
    ViewData["Title"] = "Reports";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <!-- Total Revenue Section -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary fw-bold">Total Revenue Generated</h5>
                    <p class="card-text display-4 fw-bold text-success">
                        @Model.RevenusTotaux.ToString("C")
                    </p>
                    <p class="text-muted">This is the total revenue from all vehicle operations.</p>
                    <i class="fas fa-chart-line fa-3x text-success"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Vehicle Occupancy Rates Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <h5 class="mb-0 flex-grow-1">Vehicle Occupancy Rates</h5>
                    <i class="fas fa-car-alt fa-lg"></i>
                </div>
                <div class="card-body p-4">
                    <table class="table table-hover table-striped table-bordered">
                        <thead class="table-primary text-center">
                        <tr>
                            <th>Vehicle</th>
                            <th>Model</th>
                            <th class="text-center">Occupancy Rate</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.VehicleOccupancies.Any())
                        {
                            @foreach (var vehicle in Model.VehicleOccupancies)
                            {
                                <tr>
                                    <td class="text-center align-middle">@vehicle.Make</td>
                                    <td class="text-center align-middle">@vehicle.Model</td>
                                    <td class="text-center align-middle text-primary fw-bold">
                                        @vehicle.OccupancyRate.ToString("F2") %
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    <i class="fas fa-exclamation-circle"></i>
                                    No occupancy data available.
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
