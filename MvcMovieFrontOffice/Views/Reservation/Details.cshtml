@model MvcMovieFrontOffice.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Reservation Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Vehicle ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VehicleId)</dd>

                <dt class="col-sm-3 fw-bold">User ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>

                <dt class="col-sm-3 fw-bold">Start Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-3 fw-bold">End Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDate)</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(@Model.Status == "pending" ? "bg-warning text-dark" : @Model.Status == "confirmed" ? "bg-success" : "bg-danger")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold">Total Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalPrice)</dd>

                <dt class="col-sm-3 fw-bold">Created At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3 fw-bold">Updated At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            @if (Model.Status == "pending")
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            }
        </div>
    </div>
</div>
