@model MvcMovieFrontOffice.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4" style="padding-top: 6%">
    <div class="card shadow border-0">
        <!-- Card Header -->
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0">Reservation Details</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body px-4">
            <div class="row mb-3">
                <!-- Vehicle N° -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">Vehicle N°:</span>
                    <span class="text-muted">@Html.DisplayFor(model => model.VehicleId)</span>
                </div>

                <!-- Status -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">Status:</span>
                    <span class="badge @(@Model.Status == "pending" ? "bg-warning text-dark" : @Model.Status == "confirmed" ? "bg-success" : "bg-danger")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </div>

                <!-- Start Date -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">Start Date:</span>
                    <span class="text-muted">@Model.StartDate.ToString("MM/dd/yyyy")</span>
                </div>

                <!-- End Date -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">End Date:</span>
                    <span class="text-muted">@Model.EndDate.ToString("MM/dd/yyyy")</span>
                </div>

                <!-- Total Price -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">Total Price:</span>
                    <span class="text-muted">@Html.DisplayFor(model => model.TotalPrice) €</span>
                </div>

                <!-- Amount Payed -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">Amount Payed:</span>
                    <span class="text-muted">@Html.DisplayFor(model => model.Amount) €</span>
                </div>

                <!-- Rest -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold text-danger">Rest:</span>
                    <span class="text-danger fw-bold">@(@Model.TotalPrice - @Model.Amount) €</span>
                </div>

                <!-- Created At -->
                <div class="col-md-6 mb-3">
                    <span class="fw-bold">Created At:</span>
                    <span class="text-muted">@Html.DisplayFor(model => model.CreatedAt)</span>
                </div>
            </div>
        </div>

        <!-- Card Footer -->
        <div class="card-footer d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                Back to List
            </a>
            @if (Model.Status == "pending")
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-danger">
                    Edit
                </a>
            }
        </div>
    </div>
</div>