@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcMovieFrontOffice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true"/>
</head>
<body>
    <header class="header-cust">
        <header class="header-head">
            <a class="logo-cust" asp-area="" asp-controller="Vehicle" asp-action="Index"><img src="~/images/logo.png" alt="Location Vehicle Logo" style="height: 40px; width: auto;"></a>

            <input type="checkbox" id="check"/>
            <label class="icons" for="check">
                <svg id="menu-svg" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25" viewBox="0 0 50 50">
                    <path d="M 0 9 L 0 11 L 50 11 L 50 9 Z M 0 24 L 0 26 L 50 26 L 50 24 Z M 0 39 L 0 41 L 50 41 L 50 39 Z"></path>
                </svg>
                <svg id="close-svg" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25" viewBox="0 0 50 50">
                    <path d="M 11 4 C 7.1456661 4 4 7.1456661 4 11 L 4 39 C 4 42.854334 7.1456661 46 11 46 L 39 46 C 42.854334 46 46 42.854334 46 39 L 46 11 C 46 7.1456661 42.854334 4 39 4 L 11 4 z M 11 6 L 39 6 C 41.773666 6 44 8.2263339 44 11 L 44 39 C 44 41.773666 41.773666 44 39 44 L 11 44 C 8.2263339 44 6 41.773666 6 39 L 6 11 C 6 8.2263339 8.2263339 6 11 6 z M 13.085938 13 L 22.308594 26.103516 L 13 37 L 15.5 37 L 23.4375 27.707031 L 29.976562 37 L 37.914062 37 L 27.789062 22.613281 L 36 13 L 33.5 13 L 26.660156 21.009766 L 21.023438 13 L 13.085938 13 z M 16.914062 15 L 19.978516 15 L 34.085938 35 L 31.021484 35 L 16.914062 15 z"></path>
                </svg>
            </label>
    
            <nav class="navbar-cust">
                <a asp-area="" asp-controller="Vehicle" asp-action="Index">Home</a>
                <a asp-area="" asp-controller="Reservation" asp-action="Index">Reservation</a>
                @if (signInManager.IsSignedIn(User))
                {   
                    <a asp-area="" asp-controller="Payment" asp-action="Index">Payment</a> 
                    <a asp-area="" asp-controller="Wallet" asp-action="Index">Wallet</a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-page="/Admin/Index">Admin</a>
                }
               <partial name="_LoginPartial"/>
            </nav>
        </header>
    </header>
    <div style="min-height: 84vh">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="footer-brand">CompanyName</div>
                    <p class="footer-text">Creating amazing experiences and innovative solutions for our customers
                        worldwide.</p>
                    <div class="social-links">
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-md-6 text-md-end">
                    <ul class="footer-links">
                        <li><a href="#">About</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Privacy</a></li>
                        <li><a href="#">Terms</a></li>
                    </ul>
                </div>
            </div>

            <div class="copyright text-center">
                © 2024 CompanyName. All rights reserved.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
